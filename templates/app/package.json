{
  "name": "@jungvonmatt/wekit-template-hugo",
  "description": "A Jamstack kit for Contentful, Hugo and Netlify.",
  "version": "0.7.0",
  "private": true,
  "browserslist": [
    "defaults"
  ],
  "scripts": {
    "clean": "del resources public \"data/*\" \"!data/storybook\"",
    "precontent": "npm run clean",
    "content": "cssg fetch",
    "watch:hugo": "hugo server --watch --noHTTPCache",
    "watch:content": "cssg watch",
    "watch": "run-p watch:content watch:hugo",
    "prestart": "npm run content",
    "start": "hugo server --disableFastRender --log",
    "prebuild": "npm run content",
    "build": "hugo --gc --minify --environment production",
    "scaffold": "node tools/hygen scaffold new",
    "storybook:build": "hugo --gc --environment storybook --watch --log",
    "storybook:run": "start-storybook -p 6006",
    "prestorybook": "run-s clean cf:docs cf:argtypes",
    "storybook": "run-p storybook:build storybook:run",
    "prebuild-storybook": "npm run clean && npm run cf:docs && npm run cf:argtypes && hugo --gc --environment storybook",
    "build-storybook": "build-storybook",
    "debug:i18n": "hugo --i18n-warnings | grep i18n",
    "lint:js": "eslint --ext .js,.ts --fix --ignore-path .gitignore . --ignore-pattern '*.stories.js'",
    "lint:styles": "stylelint \"assets/scss/**/*.{css,sass,scss,sss,less}\"",
    "lint": "npm run lint:js",
    "lh:install": "cd tools/lighthouse && npm install",
    "lh:start": "cd tools/lighthouse && npm run start",
    "lh:report": "cd tools/lighthouse && npm run report",
    "cf:login": "contentful login",
    "cf:docs": "migrations doc -p docs/contentful --template contentful-docs.js",
    "cf:argtypes": "migrations doc -p data/contentful/argtypes --template contentful-argtypes.js --extension json"
  },
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^4.1.3",
    "autoprefixer": "^10.4.2",
    "container-query-polyfill": "^0.1.2",
    "fs-extra": "^10.0.0",
    "generate-template-files": "^3.2.0",
    "postcss": "^8.4.4",
    "postcss-cli": "^9.0.2",
    "purgecss-whitelister": "^2.4.0",
    "quicklink": "^2.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.16.12",
    "@jungvonmatt/contentful-fakes": "^1.7.1",
    "@jungvonmatt/contentful-migrations": "^5.3.2",
    "@jungvonmatt/contentful-ssg": "^1.9.0",
    "@jungvonmatt/cssg-plugin-assets": "^1.9.0",
    "@jungvonmatt/cssg-plugin-hugo": "^1.9.0",
    "@storybook/addon-a11y": "6.4.14",
    "@storybook/addon-actions": "6.4.14",
    "@storybook/addon-docs": "^6.5.10",
    "@storybook/addon-essentials": "^6.5.10",
    "@storybook/addon-links": "6.4.14",
    "@storybook/builder-webpack5": "6.4.14",
    "@storybook/html": "^6.1.21",
    "@storybook/manager-webpack5": "6.4.14",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "babel-loader": "^8.2.3",
    "contentful-cli": "^1.10.0",
    "copy-webpack-plugin": "^9.1.0",
    "del-cli": "^4.0.1",
    "dotenv": "^16.0.0",
    "enquirer": "^2.3.6",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-xo": "^0.39.0",
    "eslint-config-xo-space": "^0.31.0",
    "eslint-config-xo-typescript": "^0.49.0",
    "eslint-plugin-prettier": "^4.0.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^7.0.1",
    "hygen": "^6.1.0",
    "markdown-table": "^3.0.1",
    "netlify-cli": "^11.5.1",
    "npm-run-all": "^4.1.5",
    "picocolors": "^1.0.0",
    "prettier": "^2.5.0",
    "prettier-plugin-go-template": "^0.0.11",
    "pretty-quick": "^3.1.2",
    "stylelint": "^14.3.0",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "to-regex": "^3.0.2",
    "ts-dedent": "^2.2.0"
  },
  "migrations": {
    "storage": "content",
    "migrationContentTypeId": "contentful-migrations",
    "directory": "contentful/migrations"
  }
}
