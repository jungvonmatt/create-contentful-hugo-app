{
  "name": "@jungvonmatt/wekit-theme-hugo-basic",
  "description": "A Jamstack kit for Contentful, Hugo and Netlify.",
  "version": "0.7.0",
  "private": true,
  "browserslist": [
    "defaults"
  ],
  "scripts": {
    "clean": "del resources public",
    "create-story": "node ./generate-template-files/story.js",
    "storybook:build": "hugo --gc --environment storybook --watch --log",
    "storybook:run": "start-storybook -p 6006",
    "prestart": "run-p clean",
    "start": "run-p storybook:build storybook:run",
    "prebuild": "npm run clean && hugo --gc --environment storybook",
    "build": "build-storybook",
    "debug:i18n": "hugo --i18n-warnings | grep i18n",
    "lint:js": "eslint --ext .js,.ts --fix --ignore-path .gitignore . --ignore-pattern '*.stories.js'",
    "lint:styles": "stylelint \"assets/scss/**/*.{css,sass,scss,sss,less}\"",
    "lint": "npm run lint:js && npm run lint:styles"
  },
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^4.1.3",
    "@storybook/addon-docs": "^6.4.14",
    "autoprefixer": "^10.3.1",
    "container-query-polyfill": "^0.1.1",
    "generate-template-files": "^3.2.0",
    "postcss": "^8.4.4",
    "postcss-cli": "^9.0.2",
    "purgecss-whitelister": "^2.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@jungvonmatt/contentful-fakes": "^1.7.1",
    "@jungvonmatt/contentful-migrations": "^5.3.1",
    "@jungvonmatt/contentful-ssg": "^1.9.0",
    "@jungvonmatt/cssg-plugin-assets": "^1.9.0",
    "@jungvonmatt/cssg-plugin-hugo": "^1.9.0",
    "@storybook/addon-a11y": "^6.4.4",
    "@storybook/addon-actions": "^6.4.4",
    "@storybook/addon-essentials": "^6.4.4",
    "@storybook/addon-links": "^6.4.4",
    "@storybook/builder-webpack5": "^6.4.4",
    "@storybook/html": "^6.1.21",
    "@storybook/manager-webpack5": "^6.4.4",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "babel-loader": "^8.2.3",
    "contentful-cli": "^1.8.22",
    "copy-webpack-plugin": "^9.1.0",
    "del-cli": "^4.0.1",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-xo": "^0.39.0",
    "eslint-config-xo-space": "^0.30.0",
    "eslint-config-xo-typescript": "^0.47.1",
    "eslint-plugin-prettier": "^4.0.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^7.0.1",
    "markdown-table": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.0",
    "prettier-plugin-go-template": "^0.0.11",
    "pretty-quick": "^3.1.2",
    "stylelint": "^14.1.0",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "ts-dedent": "^2.2.0"
  },
  "migrations": {
    "storage": "content",
    "migrationContentTypeId": "contentful-migrations",
    "directory": "contentful/migrations"
  }
}
